/dts-v1/;
#include "at91sam9n12.dtsi"

/ {
	model = "Atmel AT91SAM9N12-EK";
	compatible = "atmel,at91sam9n12ek", "atmel,at91sam9n12", "atmel,at91sam9";

	chosen {
		bootargs = "console=ttyS0,115200 i2c_bus=1,100 root=/dev/mtdblock1 rw rootfstype=jffs2";
	};

	memory {
		reg = <0x20000000 0x8000000>;
	};

	clocks {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		main_clock: clock@0 {
			compatible = "atmel,osc", "fixed-clock";
			clock-frequency = <16000000>;
		};
	};

	ahb {
		apb {
			dbgu: serial@fffff200 {
				status = "okay";
			};

			i2c0: i2c@f8010000 {
				status = "okay";
				tlv320aic3107: tlv320aic3x@18 {
					compatible = "ti,tlv320aic3107";
					reg = <0x18>;
					gpio-reset = <&pioA 23 GPIO_ACTIVE_HIGH>;
					ai3x-micbias-vg = <2>;
				};
			};

			i2c1: i2c@f8014000 {
				status = "okay";
				dma-names = "";	/* Disable DMA for I2C1 so that the audio chip can use it instead */
				si70xx@40 {
					compatible = "si70xx";
					reg = <0x40>;
				};
			};

			mmc0: mmc@f0008000 {
				pinctrl-0 = <
					&pinctrl_board_mmc0
					&pinctrl_mmc0_slot0_clk_cmd_dat0
					&pinctrl_mmc0_slot0_dat1_3>;
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
					cd-gpios = <0>;
				};
			};

			pinctrl@fffff400 {
				board {
					pinctrl_pck0_as_mck: pck0_as_mck {
						atmel,pins =
							<AT91_PIOB 10 AT91_PERIPH_B AT91_PINCTRL_NONE>;	/* PB10 periph B */
					};
				};

				mmc0 {
					pinctrl_board_mmc0: mmc0-board {
						atmel,pins =
							<AT91_PIOA 7 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP_DEGLITCH>;	/* PA7 gpio CD pin pull up and deglitch */
					};
				};
			};

			ssc0: ssc@f0010000 {
				status = "okay";
			};

			spi0: spi@f0000000 {
				status = "disabled";
				cs-gpios = <&pioA 14 0>, <0>, <0>, <0>;
				m25p80@0 {
					compatible = "atmel,at25df321a";
					spi-max-frequency = <50000000>;
					reg = <0>;
				};
			};

			spi1: spi@f0004000 {
				status = "okay";
				cs-gpios = <&pioA 1 0>, <0>, <0>, <0>;
				sprout_talk@0 {
					compatible = "sprout_talk";
					spi-max-frequency = <1000000>;
					reg = <0>;
				};
			};

			watchdog@fffffe40 {
				status = "okay";
			};
		};

		nand0: nand@40000000 {
			nand-bus-width = <8>;
			nand-ecc-mode = "hw";
			atmel,has-pmecc;
			atmel,pmecc-cap = <2>;
			atmel,pmecc-sector-size = <512>;
			nand-on-flash-bbt;
			status = "okay";
		};

		usb0: ohci@00500000 {
			num-ports = <2>;
			atmel,vbus-gpio = <
				0
				&pioB 7 GPIO_ACTIVE_LOW
			>;
			status = "okay";
		};

		udc0: gadget@f803c000 {
			atmel,vbus-gpio = <&pioB 16 GPIO_ACTIVE_HIGH>;
			status = "okay";
		};
	};

	i2c@0 {
		status = "disabled";
	};

	i2c@1 {
		status = "disabled";
	};

	leds {
		compatible = "gpio-leds";

		d8 {
			label = "d8";
			gpios = <&pioB 4 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "mmc0";
		};

		d9 {
			label = "d6";
			gpios = <&pioB 5 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "nand-disk";
		};

		d10 {
			label = "d7";
			gpios = <&pioB 6 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "heartbeat";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";

		enter {
			label = "Enter";
			gpios = <&pioB 4 GPIO_ACTIVE_LOW>;
			linux,code = <28>;
			gpio-key,wakeup;
		};
	};

	sound {
		compatible = "atmel,asoc-tlv320aic3107";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_pck0_as_mck>;

		atmel,model = "tlv320aic3x";
		atmel,ssc-controller = <&ssc0>;
		atmel,audio-codec = <&tlv320aic3107>;

		atmel,audio-routing =
			"Left Class-D Out", "SPOP",
			"Left Class-D Out", "SPOM",
			"Left Class-D Out", "Front Left",
			"LINE1L", "Left Capture";
	};
};

